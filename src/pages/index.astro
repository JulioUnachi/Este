---
import Navegacion from "../components/Navegacion.astro";
const title = "Inicio|SupportjcOnline";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="@Julio_elias13" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Inter&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <style>
      header {
        width: 100%;
        height: 500px;
        background-color: #f4f7fb;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .contain {
        background-color: blueviolet;
        color: white;
        border-radius: 21px;
        height: 350px;
        width: 80%;
        display: flex;
      }
      .text {
        width: 50%;
        padding: 10px;
      }
      .imagen {
        width: 50%;
        }
        img {
  height: 100%;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}

      h1 {
        margin-top: 20px;
        margin-bottom: 30px;
        font-size: 2.2rem;
      }

      .parrafo {
        padding: 60px auto;
        margin-bottom: 30px;
      }
      .button {
        color: #6016c6;
        background-color: white;
        border-radius: 40px;
        padding: 10px;
      }
    </style>
    <Navegacion />

    <header>
      <div class="contain">
        <div class="text">
          <h1>Descubre Tu Potencial con SupportjcOnline</h1>
          <p class="parrafo">
            Empoderamos tus metas a través de la educación. ¡Bienvenido a un
            viaje de aprendizaje sin límites
          </p>
          <a class="button" href="#">Explorar cursos</a>
        </div>

        <div class="imagen">
          <img src="/assets/hombre-mujer.jpg" alt="imagen" />
        </div>
      </div>
    </header>
  </body>
</html>
